!!!
%html{:dir => 'ltr', :lang => "en-NL"}
  %head
    %meta{'http-equiv' => "Content-Type", :content => "text/html;charset=utf-8"}
    %title=yield(:page_title) || Settings.blog_title
    = stylesheet_link_tag :all
    = javascript_include_tag 'jquery'
    = javascript_include_tag 'application'
    = javascript_include_tag 'highlight'
    = javascript_include_tag 'showdown'
    
  %body
    #master
      - if User.current?
        #admin_navigation= render :partial => "shared/admin_menu"
      #navigation= render :partial => "shared/menu"
      #wrapper
        #content=yield
        #side
          %header#blog_title= Setting.blog_title
          = Setting.description
      .push
    = render :partial => "shared/footer"